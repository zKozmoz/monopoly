<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="MONOPOLY.Client.ui.MainController">

    <!-- LOG -->
    <right>
        <VBox spacing="10" prefWidth="280" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 0 0 0 2;">

            <Label text="STATO GIOCATORI" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50;"/>

            <ListView fx:id="playerListView" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;"/>

            <Label text="DIARIO DI GIOCO" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50;"/>
            <TextArea fx:id="logArea" prefHeight="200" editable="false" wrapText="true" style="-fx-focus-color: transparent; -fx-text-box-border: transparent;"/>
        </VBox>
    </right>

    <!-- BOARD -->
    <center>
        <GridPane fx:id="board"
                  gridLinesVisible="true"
                  prefWidth="600"
                  prefHeight="600"/>
    </center>

    <bottom>
        <VBox spacing="5" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="rollDiceButton" text="Lancia i dadi" onAction="#rollDice" disable="true" prefHeight="40"/>

                <HBox fx:id="decisionBox" spacing="10" visible="false" managed="false">
                    <Button text="Compra" onAction="#handleBuy" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    <Button text="Passa" onAction="#handleSkip" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>
            </HBox>

            <Button fx:id="startButton"
                    text="Start Game"
                    onAction="#startGame"
                    visible="false"
                    managed="false"
                    maxWidth="Infinity"
                    prefHeight="40"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </bottom>
</BorderPane>
